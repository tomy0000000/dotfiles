# https://git-scm.com/docs/git-config
[color]
interactive = "auto"
ui = "auto"

# https://github.com/dracula/git/blob/master/config/gitconfig
[color "branch"]
current = cyan bold reverse
local = white
plain =
remote = cyan

[color "diff"]
commit =
func = cyan
plain =
whitespace = magenta reverse
meta = white
frag = cyan bold reverse
old = red
new = green

[color "grep"]
context =
filename =
function =
linenumber= white
match =
selected =
separator =

[color "interactive"]
error =
header =
help =
prompt =

[color "status"]
added = green
changed = yellow
header =
localBranch =
nobranch =
remoteBranch = cyan bold
unmerged = magenta bold reverse
untracked = red
updated = green bold

[commit]
template = "~/.git_commit_template"

[core]
attributesFile = "~/.gitattributes"
excludesFile = "~/.gitignore_global"
editor = "nano"

[diff]
wordRegex = "."

[grep]
extendedRegexp = true
lineNumber = true

[help]
# Autofix the command and execute after 3 secs
autocorrect = 30

[include]
path = "~/.gitconfig-custom" # include the user block
path = "~/.gitalias"

[init]
# https://github.blog/changelog/2020-10-01-the-default-branch-for-newly-created-repositories-is-now-main/
defaultBranch = "main"

[log]
abbrevCommit = true
date = "human"

[merge]
# https://nvie.com/posts/a-successful-git-branching-model/#incorporating-a-finished-feature-on-develop
ff = false

[pull]
ff = only
